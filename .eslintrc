{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "simple-import-sort"
  ],
  "extends": [
    "react-app"
  ],
  "globals": {
    "API_HOST_POS": true
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "simple-import-sort/sort": "error",
    "sort-imports": "off",
    "import/order": "off",
    "curly": [
      "error",
      "all"
    ],
    "semi": [
      "error"
    ],
    "quotes": [
      2,
      "single"
    ],
    "valid-jsdoc": 0,
    "react/prop-types": 0,
    "max-lines": [
      "error",
      300
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "object-curly-newline": [
      "error",
      {
        "minProperties": 3
      }
    ],
    "object-property-newline": [
      "error"
    ],
    "brace-style": [
      "error"
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        "tabWidth": 4,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreComments": true
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "max-statements-per-line": [
      "warn",
      {
        "max": 1
      }
    ],
    "array-bracket-newline": [
      "warn",
      {
        "multiline": true,
        "minItems": 1
      }
    ],
    "padding-line-between-statements": [
      "warn",
      {
        "blankLine": "always",
        "prev": "const",
        "next": "return"
      }
    ]
  }
}